
{{section.settings.posts-range}}

{% assign blog = section.settings.new-blog %}

{% unless blog.articles_count == 0 %}
  {%  for article in blog.articles  limit: section.settings.posts-range %}
        <a href="{{ article.url }}">
            {{ article.image | image_url: width: 200 |  img_tag: 'image alt text', '', '450x450' }}
        </a>
        <br/>
        <a href="{{ article.url }}">
            {{article.title}}
        </a>
{% endfor %}
  
{% endunless %}


{% schema %}
    {
        "name": "New Blog Posts",
        "settings": [
            {
                "id": "posts-range",
                "type": "range",
                "label": "Range",
                "min": 3,
                "max": 12,
                "step": 3,
                "default": 3
            },
            {
                "id":"new-blog",
                "type": "blog",
                "label":"Blog"
            }
        ],
        "presets": [
            {
                "name": "New Blog Posts",
                "category": "Posts"
            }
        ]
    }
{% endschema %}
