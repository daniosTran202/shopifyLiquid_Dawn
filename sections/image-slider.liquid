<div data-section-id="{{ section.id }}" data-section-type="slideshow-section">
    {% if section.blocks.size > 0 %}
<div class="slideshow-wrapper">
  <button type="button" class="visually-hidden imageSlider__pause" data-id="{{ section.id }}" aria-live="polite">
    <span class="imageSlider__pause-stop">
      {% include 'icon-pause' %}
      <span class="icon__fallback-text">{{ 'sections.slideshow.pause_slideshow' | t }}</span>
    </span>
    <span class="imageSlider__pause-play">
      {% include 'icon-play' %}
      <span class="icon__fallback-text">{{ 'sections.slideshow.play_slideshow' | t }}</span>
    </span>
  </button>

  <div class="slideshow slideshow--{{ section.settings.imageSlider_height }}" id="Slideshow-{{ section.id }}" data-autoplay="{{ section.settings.autoplay }}" data-speed="{{ section.settings.autoplay_speed }}">
    {% for block in section.blocks %}
      {%- assign is_background_video = false -%}
      {% if block.type == 'video' %}
        {% if block.settings.video_type == 'background' or block.settings.video_type =='background-chrome' %}
          {%- assign is_background_video = true -%}
        {% endif %}
      {% endif %}

      <div class="imageSlider__slide imageSlider__slide--{{ block.id }}{% if is_background_video %} imageSlider__slide--background-video{% endif %}" {{ block.shopify_attributes }}>
        {% if block.settings.link != blank %}
          <a href="{{ block.settings.link }}" class="imageSlider__link">
        {% endif %}

        {% if block.type == 'video' %}
          {% if block.settings.video_url != blank %}
            <div class="video-loader"></div>
          {% endif %}
          {% unless block.settings.video_type == 'background' %}
            <button type="button" class="text-link imageSlider__video-control imageSlider__video-control--close" data-controls="SlideshowVideo-{{ block.id }}">
              {% include 'icon-close' %}
              {% comment %} <span class="icon__fallback-text">{{ 'sections.slideshow.close_video' | t }}</span> {% endcomment %}
            </button>
          {% endunless %}
          {% if block.settings.video_url != blank %}
            <div id="SlideshowVideo-{{ block.id }}" class="imageSlider__video {% if is_background_video %}imageSlider__video--background{% endif %} imageSlider__video--{{ block.settings.video_type }}"
              data-id="{{ block.settings.video_url.id }}"
              data-type="{{ block.settings.video_type }}"
              data-slideshow="Slideshow-{{ section.id }}"></div>
          {% endif %}
        {% endif %}

        {% if block.settings.image == blank %}
          <div class="imageSlider__image js">
            <div class="placeholder-background">
              {% capture current %}{% cycle 1, 2 %}{% endcapture %}
              {{ 'lifestyle-' | append: current | placeholder_svg_tag: 'placeholder-svg' }}
            </div>
          </div>
        {% else %}
          <div class="imageSlider__image box ratio-container lazyload{% unless forloop.first == true %} lazypreload{% endunless %} js"
               
               data-sizes="auto"
               data-parent-fit="cover"
               style="background-position: {{ block.settings.alignment }};{% if forloop.first == true %} background-image: url('{{ block.settings.image | img_url: '300x300' }});{% endif %}">
          </div>
        {% endif %}

        <noscript>
          <div class="imageSlider__image"{% if block.settings.image %} style="background-image: url('{{ block.settings.image | img_url: '2048x' }}'); background-position: {{ block.settings.alignment }};"{% endif %}>
            {% if block.settings.image == blank %}
              <div class="placeholder-background">
                {% capture current %}{% cycle 1, 2 %}{% endcapture %}
                {{ 'lifestyle-' | append: current | placeholder_svg_tag: 'placeholder-svg' }}
              </div>
            {% endif %}
          </div>
        </noscript>
        <div class="imageSlider__text-wrap{% if block.settings.title != blank or block.settings.subheading != blank %} imageSlider__overlay{% endif %}">
          <div class="imageSlider__text-content">
            <div class="page-width">
              {% unless block.settings.title == blank %}
                <h2 class="h1 mega-title imageSlider__title{% if settings.link != blank %} imageSlider__title--has-link{% endif %}{% if section.settings.text_size == 'large' %} mega-title--large{% endif %}">
                  {{ block.settings.title | escape }}
                </h2>
              {% endunless %}
              {% unless block.settings.subheading == blank %}
                <span class="mega-subtitle imageSlider__subtitle{% if section.settings.text_size == 'large' %} mega-subtitle--large{% endif %}">
                  {{ block.settings.subheading | escape }}
                </span>
              {% endunless %}
              {% if block.type == 'video' %}
                {% unless block.settings.video_type == 'background' %}
                  <div class="imageSlider__video-control--play-wrapper{% if block.settings.title != blank or block.settings.subheading != blank %} imageSlider__video-control--play-wrapper--push{% endif %}">
                    <button type="button" class="text-link imageSlider__video-control imageSlider__video-control--play" data-controls="SlideshowVideo-{{ block.id }}">
                     
                      {% comment %} <span class="icon__fallback-text">{{ 'sections.slideshow.play_video' | t }}</span> {% endcomment %}
                    </button>
                  </div>
                {% endunless %}
              {% endif %}
            </div>
          </div>
        </div>

        {% if block.settings.link != blank %}
          </a>
        {% endif %}
      </div>
    {% endfor %}
  </div>
</div>
{% endif %}
</div>
