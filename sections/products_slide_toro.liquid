<script>
  
  function sliderProducts (){
        $(document).ready(function () {
        $(".slick_slider--products").not('.slick-initialized').slick({
        slidesToShow: 4,
        slidesToScroll: 4,
        infinite: true,
        autoplay: false,
        arrows: false,
        dots: true,
        draggable: true,
        responsive: [
          {
            breakpoint: 1025,
            settings: {
              dots:true,
              slidesToShow: 3,
              slidesToScroll: 3
            },
          },
          {
            breakpoint: 480,
            settings: {
              slidesToShow: 1,
              slidesToScroll: 1,
              arrows: false,
              infinite: false,
              dots:false,
            },
          },
        ],
      });
    });
  }

  
  sliderProducts();
       $(document).on('shopify:section:load', () => sliderProducts());



  {% if request.design_mode %}
     $(document).on('shopify:section:load', () => sliderProducts());
        
      $(document).on('shopify:section:reorder', () => sliderProducts());
      
      $(document).on('shopify:section:select', () => sliderProducts());
      
      $(document).on('shopify:section:deselect', () => sliderProducts());
  {% endif %}

</script>




<div class="product_slider--toro animated animatedFadeInUp  fadeInUp" style="margin: 0px 0px 100px; visibility: visible ;">
  <div class="container">
    <div class="section-header text-center">
      <h3 class="heading_style" style="font-size: 20px; letter-spacing: 2px;"><span>TOP SALE</span>
      </h3>
    </div>
    <div class="slick_slider--products grid-items xlg-grid-4-items lg-grid-4-items md-grid-4-items sm-grid-3-items xs-grid-2-items mb-grid-1-items " >

           {% assign _collection = collections['product_slider_toro'] %}
            {% for product in collections[section.settings.product_slider_toro].products %}              

                <div class="grid-item" >
                  <div class="product_item--inner">
                      <div class="product_item--thumbnail">
                          <div class="product_item--thumbnail-holder">
                              <a href="" class="product__link" tabindex="0">
                                {{ product.media[1]| image_url: width:400 |image_tag: class:"wp-post-image loading lazy", style:"display:block"}}
                                {{ product.media[2]| image_url: width:400 |image_tag: class:"wp-alt-image loading lazy", style:"display:block"}}
                           
                                {% if product.tags == "New" %}
                                  <span class="label-product new">New</span>
                                {% elsif product.tags contains "Hot" %}
                                  <span class="label-product hot">Hot</span>
                                {% else %}
                                  <span style="display: none;"></span>
                                {% endif %}
                              </a>
                          </div>
                      <div class="product_item_thumbnail_action product_item--action">
                          <div class="wrap-addto">
                          <a href=""  class="globo-quick-view-button quickview  la-quickview-button" title="Quick view" tabindex="0"><span>Quick view</span></a>                    
                              <div class="gpw-action"><a class="add_wishlist  la-core-wishlist globo-add-to-wishlist"  title="Add to wishtlist" ><span>Add to wishtlist</span></a></div>                            
                              <div class="gpc-action"><a class="globo-add-to-compare"  title="Add to compare" ><span>Add to compare</span></a></div>
                          <a href="" class="globo-add-to-cart-toro"  title="Add to cart" >
                              <span>
                              Add to cart
                              </span>
                          </a>
                          </div>
                      </div>
                      </div>
                      <div class="product_item--info">
                      <div class="product_item--info-inner text-center">
                          <h2 class="product_item--title">
                          <a href="" tabindex="0">{{ product.title }}</a>
                          </h2>
                          <span class="price">{{ product.price | money }}</span>
                      </div>
                      </div>
                  </div>  
              </div>

              {% endfor %}
        </div>
    </div>
</div>  

