<script type="text/javascript">
    $(document).ready(function(){
        console.log("Slider_slicks is ready ! gooo ");
     $('.slider-slicks').slick()
    });
  </script>



  <div class="slider-slicks">
    {% for block in section.blocks %}
    <div>
        {{ block.settings.image | image_url: width: 600, height: 450 | image_tag }}
        <div>
            <h5>{{block.settings.heading}}</h5>
            <button>Shop Now</button>
        </div>
    </div>
    {% endfor %}
  </div>




{% schema %}
    {
        "name": "Slider Customize",
        "max_blocks": 10,
        "settings": [
            {
                "type": "text",
                "id": "title",
                "label": "Slider Title",
                "default": "Slider title"
            }
        ],
        "blocks": [
            {
                "type": "slide",
                "name": "slide",
                "limit": 5,
                "settings": [
                    {
                    "type": "image_picker",
                    "id": "image",
                    "label": "Image"
                    },
                    {
                    "type": "inline_richtext",
                    "id": "heading",
                    "default": "Image slide",
                    "label": "Heading"
                    },
                    {
                    "type": "text",
                    "id": "button_label",
                    "default": "Button label",
                    "label": "Button",
                    "info": "Enter text to button"
                    },
                    {
                    "type": "url",
                    "id": "link",
                    "label": "Button URL"
                    },
                    {
                    "type": "select",
                    "id": "text_alignment",
                    "options": [
                        {
                        "value": "left",
                        "label": "left"
                        },
                        {
                        "value": "center",
                        "label": "center"
                        },
                        {
                        "value": "right",
                        "label": "rightl"
                        }
                    ],
                    "default": "center",
                    "label": "center"
                    }
                ]
            }
            
        ],
        "presets": [
            {
                "name": "Slider Custom",
                "category": "Image",
                "blocks": [
                    {
                    "type": "slide"
                    },
                    {
                    "type": "slide"
                    }
                ]
            }
        ]
    }
{% endschema %}
