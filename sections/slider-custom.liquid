

<script type="text/javascript">
    $(document).ready(function () {
    setTimeout(function () {

$(".slider-slicks").slick({
    infinite: true,
    slidesToShow: 3,
    slidesToScroll: 1,
    arrows: true,
    prevArrow:
        "<div class='slick-prev'><i class='fas fa-angle-left'></i></div>",
    nextArrow:
        "<div class='slick-next'><i class='fas fa-angle-right'></i></div>",
    autoplay: false,
    responsive: [
        {
            breakpoint: 768,
            settings: {
                slidesToShow: 2,
                slidesToScroll: 1,
            }
        },
        {
            breakpoint: 420,
            settings: {
                slidesToShow: 1
            }
        }
    ],
});
}, 3000); // Change the delay time (in milliseconds) as needed
});
  </script>






{% if section.blocks.size > 0 %}
     <div class="slider-slicks">
    {% for block in section.blocks %}
    <div>
        {{ block.settings.image | image_url: width: 600, height: 450 | image_tag }}
        <div>
            <h5>{{block.settings.heading}}</h5>
            <button>Shop Now</button>
        </div>
    </div>
    {% endfor %}
    </div> 
{% else %}

 {{ "Not slider in there !" }}

 {% endif %}






{% schema %}
    {
        "name": "Slider Customize",
        "max_blocks": 10,
        "settings": [
            {
                "type": "text",
                "id": "title",
                "label": "Slider Title",
                "default": "Slider title"
            }
        ],
        "blocks": [
            {
                "type": "slide",
                "name": "slide",
                "limit": 5,
                "settings": [
                    {
                    "type": "image_picker",
                    "id": "image",
                    "label": "Image"
                    },
                    {
                    "type": "inline_richtext",
                    "id": "heading",
                    "default": "Image slide",
                    "label": "Heading"
                    },
                    {
                    "type": "text",
                    "id": "button_label",
                    "default": "Button label",
                    "label": "Button",
                    "info": "Enter text to button"
                    },
                    {
                    "type": "url",
                    "id": "link",
                    "label": "Button URL"
                    },
                    {
                    "type": "select",
                    "id": "text_alignment",
                    "options": [
                        {
                        "value": "left",
                        "label": "left"
                        },
                        {
                        "value": "center",
                        "label": "center"
                        },
                        {
                        "value": "right",
                        "label": "rightl"
                        }
                    ],
                    "default": "center",
                    "label": "center"
                    }
                ]
            }
            
        ],
        "presets": [
            {
                "name": "Slider Custom",
                "category": "Image",
                "blocks": [
                    {
                    "type": "slide"
                    },
                    {
                    "type": "slide"
                    }
                ]
            }
        ]
    }
{% endschema %}




