

<script async src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
<script async src="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.9.0/slick.min.js"></script>


<style>
    .container{
  max-width:1200px;
  margin:0 auto;
}
.slider{
  display:flex;
  .slides{
    display:flex;
    justify-content:center;
  }
}
</style>

<script>
 $('.slider').slick({
  arrows:true,
  autoplaySpeed:1000
});
</script>

<div class="container">
 <div class="slider">

   <div class="slides">
    {{section.blocks.settings.image}} 
   </div>

   <div class="slides">
    {{section.blocks.settings.image}}
   </div>

   <div class="slides">
    {{section.blocks.settings.image}}
   </div>
 </div>
</div>







{% schema %}
    {
        "name": "Slider Customize",
        "max_blocks": 10,
        "settings": [
            {
                "type": "text",
                "id": "title",
                "label": "Slider Title",
                "default": "Slider title"
            }
        ],
        "blocks": [
            {
                "type": "slide",
                "name": "slide",
                "limit": 5,
                "settings": [
                    {
                    "type": "image_picker",
                    "id": "image",
                    "label": "Image"
                    },
                    {
                    "type": "inline_richtext",
                    "id": "heading",
                    "default": "Image slide",
                    "label": "Heading"
                    },
                    {
                    "type": "text",
                    "id": "button_label",
                    "default": "Button label",
                    "label": "Button",
                    "info": "Enter text to button"
                    },
                    {
                    "type": "url",
                    "id": "link",
                    "label": "Button URL"
                    },
                    {
                    "type": "select",
                    "id": "text_alignment",
                    "options": [
                        {
                        "value": "left",
                        "label": "left"
                        },
                        {
                        "value": "center",
                        "label": "center"
                        },
                        {
                        "value": "right",
                        "label": "rightl"
                        }
                    ],
                    "default": "center",
                    "label": "center"
                    }
                ]
            }
            
        ],
        "presets": [
            {
                "name": "Slider Custom",
                "category": "Image",
                "blocks": [
                    {
                    "type": "slide"
                    },
                    {
                    "type": "slide"
                    }
                ]
            }
        ]
    }
{% endschema %}
