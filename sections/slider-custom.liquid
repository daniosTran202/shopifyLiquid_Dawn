<section class="image-slider">
    <button type="button" class="btn btn-secondary" data-toggle="tooltip" data-placement="top" title="Tooltip on top">
</button>    
<h3 class="h3 text-center">
        {{section.settings.title}}
</h3>


<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
  <ol class="carousel-indicators">
    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
    <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
  </ol>
  <div class="carousel-inner">
    {% for block in section.blocks %}
    <div class="carousel-item">
        {{ block.settings.image |  image_url: width: 500, height: 450 | image_tag: sizes: '(min-width:1600px) 960px, (min-width: 750px) calc((100vw - 11.5rem) / 2), calc(100vw - 4rem)' }}
        <div class="carousel-caption d-none d-md-block">
            <h5>{{block.settings.heading}}</h5>
            <button>Shop Now</button>
        </div>
    </div>
    {% endfor %}
  </div>



   <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>

</section>

{% schema %}
    {
        "name": "Slider Customize",
        "max_blocks": 10,
        "settings": [
            {
                "type": "text",
                "id": "title",
                "label": "Slider Title",
                "default": "Slider title"
            }
        ],
        "blocks": [
            {
                "type": "slide",
                "name": "slide",
                "limit": 5,
                "settings": [
                    {
                    "type": "image_picker",
                    "id": "image",
                    "label": "Image"
                    },
                    {
                    "type": "inline_richtext",
                    "id": "heading",
                    "default": "Image slide",
                    "label": "Heading"
                    },
                    {
                    "type": "text",
                    "id": "button_label",
                    "default": "Button label",
                    "label": "Button",
                    "info": "Enter text to button"
                    },
                    {
                    "type": "url",
                    "id": "link",
                    "label": "Button URL"
                    },
                    {
                    "type": "select",
                    "id": "text_alignment",
                    "options": [
                        {
                        "value": "left",
                        "label": "left"
                        },
                        {
                        "value": "center",
                        "label": "center"
                        },
                        {
                        "value": "right",
                        "label": "rightl"
                        }
                    ],
                    "default": "center",
                    "label": "center"
                    }
                ]
            }
            
        ],
        "presets": [
            {
                "name": "Slider Custom",
                "category": "Image",
                "blocks": [
                    {
                    "type": "slide"
                    },
                    {
                    "type": "slide"
                    }
                ]
            }
        ]
    }
{% endschema %}
