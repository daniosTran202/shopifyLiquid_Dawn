<style>

* {box-sizing: border-box}
  .img-slide{
      width: 100%;
      vertical-align: middle;
      height: fit-content;
  }
  .mySlides{
    position: relative;
  }
  .content__slider{
    position: absolute;
    top: 50%;
    right: 15%;
    
  }

  .btn__slider{
    color: #262626;
    font-size: 12px;
    font-weight: 600;
    padding: 14px 40px;
    letter-spacing: 1px;
    background-color: rgba(0,0,0,0);
    border: 1px solid transparent;
    border-color: #262626;
    display: inline-block;
  }

  .heading__slider{
    font-size: 30px; 
    font-weight: 400; 
    color: #262626; 
    margin: 0 0 15px 0; 
    line-height: 1.2; 
    letter-spacing: 2px;
  }

.slideshow-container {
  max-width: 1000px;
  position: relative;
  margin: auto;
}

.prev, .next {
  cursor: pointer;
  position: absolute;
  top: 50%;
  width: auto;
  padding: 16px;
  margin-top: -22px;
  font-weight: bold;
  transition: 0.6s ease;
  border-radius: 0 3px 3px 0;
  user-select: none;
  width: 60px;
  height: 60px;
  background: #ffffff80;
  font-size: 16px;
  color: #111;
  text-align: center;
}

.next {
  right: 0;
  border-radius: 3px 0 0 3px;
}

.prev:hover, .next:hover {
  background-color: #f1f1f1;
  color: black;
}
</style>



<div class="slideshow-container">
     {% for block in section.blocks %}
        <div class="mySlides">  
            {{ block.settings.image | image_url: width: 500 | image_tag: class: 'img-slide', sizes: '(min-width:1600px) 960px, (min-width: 750px) calc((100vw - 11.5rem) / 2), calc(100vw - 4rem)' }}
          <div class="content__slider">  
          <h3 class="heading__slider">{{block.settings.heading}}</h3>
            <button class="btn__slider">Shop Now</button>
          </div>
    </div>
    {% endfor %}
    
    <a class="prev" onclick="plusSlides(-1, 1)">&#10094;</a>
    <a class="next" onclick="plusSlides(1, 1)">&#10095;</a>
</div>

<script>
let slideIndex = 1;
let slideId = "mySlides";
showSlides(slideIndex);

function plusSlides(n) {
  showSlides(slideIndex += n);
}

function showSlides(n) {
  let i;
  let x = document.getElementsByClassName(slideId);
  if (n > x.length) {slideIndex = 1}    
  if (n < 1) {slideIndex = x.length}
  for (i = 0; i < x.length; i++) {
     x[i].style.display = "none";  
  }
  x[slideIndex-1].style.display = "block";  
}
</script>





