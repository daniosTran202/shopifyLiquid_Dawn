  @keyframes fadeInUp {
    from {
        transform: translate3d(0,40px,0)
    }

    to {
        transform: translate3d(0,0,0);
        opacity: 1
    }
}

@-webkit-keyframes fadeInUp {
    from {
        transform: translate3d(0,40px,0)
    }

    to {
        transform: translate3d(0,0,0);
        opacity: 1
    }
}

.animated {
    animation-duration: 1s;
    animation-fill-mode: both;
    -webkit-animation-duration: 1s;
    -webkit-animation-fill-mode: both
}

.animatedFadeInUp {
    opacity: 0
}

.fadeInUp {
    opacity: 0;
    animation-name: fadeInUp;
    -webkit-animation-name: fadeInUp;
}


  

  .container {
      margin-right: auto;
      margin-left: auto;
      padding-left: 15px;
      padding-right: 15px;
  }

  .grid-space-20 {
    margin-left: -10px;
    margin-right: -10px;
  }

 .banner_items.slick-slider .banner_item {
      clear: none !important;
  }
  .grid-space-20 .banner_item {
      padding: 10px;
  }
  .banner_items .banner_item {
      float: left;
  }


/* banner content  */
  .banner_item_hover .col-banner {
    background-color: #262626;
    position: relative;
    overflow: hidden;
  }

  .banner_item_image:before {
    position: absolute;
    top: 0;
    left: -100%;
    z-index: 1;
    display: block;
    content: "";
    width: 50%;
    height: 100%;
    background: -webkit-linear-gradient(left, rgba(255, 255, 255, 0) 0%, rgba(255, 255, 255, .3) 100%);   
    transform: skew(-25deg);
    -webkit-transform: skewX(-25deg);
    cursor:pointer;
  }

  .banner_item_image img {
    width: 100%;
    height: auto;
    overflow-clip-margin: content-box;
    overflow: clip;
    -webkit-transition: opacity .35s, -webkit-transform .35s;
    transition: opacity .35s, transform .35s;
    -webkit-transform: scale3d(1.1, 1.1, 1);
    transform: scale3d(1.1, 1.1, 1);
  }

  .slick-slide img {
      display: block;
  }

  .banner_item_info {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    height: 100%;
    width: 100%;
    text-align: center;
    z-index: 2;
    cursor: pointer;
  }

  .text-left{
    text-align: left;
  }

  .overflow-link {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    display: block;
    z-index: 3;
  }

  .heading_title, .table-div {
    display: table;
    width: 100%;
    height: 100%;
  }

  .banner_slider_toro .banner_table_cell {
    padding: 0 50px;
  }

  .banner_table_cell, .table-cell-div {
      display: table-cell;
      vertical-align: middle;
      padding: 0 15px;
  }

  .banner_slider_toro .banner_table_cell h3 {
    color: #fff;
    font-weight: 400;
    line-height: 1.714286;
    margin: 10px 0 20px;
    font-size: 16px;
    font-family: 'Poppins';
    font-weight: 400;
  }

  .banner_item_hover .col-banner:hover .banner_item_image:before {
    animation: effect_shine 1s;
    -webkit-animation: effect_shine 1s;
    cursor:pointer;
  }

  .banner_item_hover .col-banner:hover img {
    opacity: .3;
    -webkit-transform: scale3d(1,1,1);
    transform: translate3d(1,1,1);
  }
    
  @-webkit-keyframes effect_shine {
    100% {
      left: 150%;
    }
  }
  
  @keyframes effect_shine {
    100% {
      left: 150%;
    }
  }
  
  ul.slick-dots {
    position: absolute;
    display: block;
    padding: 0;
    list-style: none;
    bottom: -55px;
    text-align: center;
  }
  
  ul.slick-dots li {
  	display: inline-block;
    	padding: 0 6px;
  }
  
  ul.slick-dots li button {
      width: 14px;
      height: 14px;
      border-radius: 50%;
      font-size: 0;
      display: block;
      padding: 0;
      border: 0;
      background-color: #E7E7E7;
      color:#E7E7E7;
  }
  ul.slick-dots li button:before{
      display:none;
  }
  
  ul.slick-dots li.slick-active button,
  ul.slick-dots li button:hover {
      background-color: #fc4f4f;
      color: #fc4f4f;
  }
  
  
  button:focus {
      outline: none;
  }

  
